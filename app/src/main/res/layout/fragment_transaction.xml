<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.TransactionsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 000 000.00 рублей"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactionsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_anchor="@+id/totalAmount"
        app:layout_constraintTop_toBottomOf="@+id/totalAmount" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#CDDC39"
        android:elevation="20dp"
        android:src="@drawable/baseline_add_black_18dp"
        app:layout_anchor="@+id/transactionsRecycler"
        app:layout_anchorGravity="top|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/transactionsRecycler" />

</android.support.constraint.ConstraintLayout>